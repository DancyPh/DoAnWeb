@model DoAn.Models.KhachHang
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    /* Full-width input fields */
    input[type=text], input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    /* Set a style for all buttons */
    button {
        background-color: #04AA6D;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
    }

        button:hover {
            opacity: 0.8;
        }

    /* Extra styles for the cancel button */
    .cancelbtn {
        width: auto;
        padding: 10px 18px;
        background-color: #f44336;
    }

    /* Center the image and position the close button */
    .imgcontainer {
        text-align: center;
        margin: 24px 0 12px 0;
        position: relative;
    }

    img.avatar {
        width: 40%;
        border-radius: 50%;
    }

    .container {
        padding: 16px;
    }

    span.psw {
        float: right;
        padding-top: 16px;
    }

    /* The Modal (background) */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        padding-top: 60px;
    }

    /* Modal Content/Box */
    .modal-content {
        background-color: #fefefe;
        margin: 5% auto 15% auto; /* 5% from the top, 15% from the bottom and centered */
        border: 1px solid #888;
        width: 80%; /* Could be more or less, depending on screen size */
    }

    /* The Close Button (x) */
    .close {
        position: absolute;
        right: 25px;
        top: 0;
        color: #000;
        font-size: 35px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: red;
            cursor: pointer;
        }

    /* Add Zoom Animation */
    .animate {
        -webkit-animation: animatezoom 0.6s;
        animation: animatezoom 0.6s
    }

    .header {
        color: #333;
        margin: 20px;
    }

    .footer_login {
        display: flex;
        justify-content: space-between;
    }

    .btn_cancel_link{
        color: #fff;
    }
</style>

@using (Html.BeginForm("Dangnhap", "User", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    if (ViewBag.LoginStatus != null && ViewBag.LoginStatus == 0)
    {
        <div class="" style="color: red">
            <p style="color: red">InValid</p>
        </div>
    }
    <div class="container">
        <label for="uname"><b>Username</b></label> @ViewData["Err1"]
        @Html.TextBoxFor(m => m.taiKhoan, new { @placeholder = "Enter Username" })

        <label for="psw"><b>Password</b></label> @ViewBag.Err2
        @Html.TextBoxFor(m => m.matKhau, new { @placeholder = "Enter Password", @type = "Password" })

        <button type="submit">Login</button>
        <div class="footer_login">
            <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
            <a href="/User/DangKy">Register</a>
        </div>

    </div>

    <div class="container" style="background-color:#f1f1f1">
        <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn"><a href="@Url.Action("Index","Home")" class="btn_cancel_link">Cancel</a></button>
        <span class="psw">Forgot <a href="#">password?</a></span>
    </div>
}

